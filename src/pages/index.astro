---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import TrustStrip from '../components/TrustStrip.astro';
import ProblemSection from '../components/ProblemSection.astro';
import StepsTimeline from '../components/StepsTimeline.astro';
import WhatYouGet from '../components/WhatYouGet.astro';
import Pricing from '../components/Pricing.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import FinalCTA from '../components/FinalCTA.astro';
---

<BaseLayout
	title="RE-FLOW — Quand le corps redevient un allié"
	description="Le programme de reconnexion corporelle pour les femmes touchées par une maladie chronique."
>
	<Fragment slot="header">
		<Header />
	</Fragment>

	<div class="relative">
		<div
			class="pointer-events-none absolute inset-x-0 top-0 h-72 bg-gradient-to-b from-white/60 to-transparent"
			aria-hidden="true"
		/>

		<Hero />
		<TrustStrip />

		<div class="border-y border-black/5 bg-white/35">
			<ProblemSection />
		</div>

		<StepsTimeline />

		<div class="border-y border-black/5 bg-white/35">
			<WhatYouGet />
		</div>

		<Pricing />
		<Testimonials />

		<div class="border-y border-black/5 bg-white/35">
			<FAQ />
		</div>

		<FinalCTA />
	</div>
</BaseLayout>
