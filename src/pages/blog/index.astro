---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const blogIndexTitle = 'Blog RE-FLOW | Conseils APA et reconnexion corporelle';
const blogIndexDescription =
	'Articles RE-FLOW pour mieux vivre avec une maladie chronique: activite physique adaptee, energie, douleur et reconnexion corporelle.';
---

<!doctype html>
<html lang="fr">
	<head>
		<BaseHead title={blogIndexTitle} description={blogIndexDescription} />
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto px-4 py-8">
			<section>
				<h1 class="text-2xl font-semibold text-slate-900 sm:text-3xl mb-12">Articles et ressources sur le coaching pour les femmes touch√©es par une maladie chronique</h1>
				<ul class="grid lg:grid-cols-4 gap-4">
					{
						posts.map((post, index) => (
							<li class:list={[
								"transition-all duration-200",
								index === 0
									? "w-full mb-4 text-center"
									: "w-[calc(50%-1rem)] max-sm:w-full max-sm:text-center"
							]}>
								<a href={`/blog/${post.id}/`} class="block no-underline group">
									{post.data.heroImage && (
										<Image
											width={index === 0 ? 960 : 320}
											height={index === 0 ? 480 : 320}
											src={post.data.heroImage}
											alt={post.data.title}
											class:list={[
												"mb-2 rounded-xl transition-shadow duration-200 group-hover:shadow-lg",
												index === 0 && "w-full"
											]}
										/>
									)}
									<h2 class:list={[
										"m-0 leading-none text-black transition-colors duration-200 group-hover:text-[rgb(var(--accent))]",
										index === 0 ? "text-xl max-sm:text-xl" : "text-xl"
									]}>
										{post.data.title}
									</h2>
									<p class="m-0 text-sm text-gray-500 transition-colors duration-200 group-hover:text-[rgb(var(--accent))]">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
