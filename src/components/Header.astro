---
const links = [
	{ href: '#programme', label: 'Programme' },
	{ href: '#methode', label: 'Méthode' },
	{ href: '#tarif', label: 'Tarif' },
	{ href: '#temoignages', label: 'Témoignages' },
	{ href: '#faq', label: 'FAQ' },
];
---

<header class="sticky top-0 z-40 border-b border-black/5 bg-[color:var(--sage)]/80 backdrop-blur">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="flex h-16 items-center justify-between gap-4">
			<a
				href="/"
				class="group inline-flex items-center gap-2 rounded-xl px-2 py-1 text-base font-semibold tracking-[0.22em] text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-[color:var(--plum)]"
				aria-label="Aller à l’accueil"
			>
				<span
					class="grid h-8 w-8 place-items-center rounded-2xl bg-white/70 ring-1 ring-black/5 shadow-sm transition group-hover:bg-white"
					aria-hidden="true"
				>
					<span class="h-2.5 w-2.5 rounded-full bg-[color:var(--plum)]"></span>
				</span>
				<span>RE-FLOW</span>
			</a>

			<nav class="hidden items-center gap-1 lg:flex" aria-label="Navigation principale">
				{links.map((l) => (
					<a
						href={l.href}
						class="rounded-xl px-3 py-2 text-base font-medium text-slate-800 transition hover:bg-white/60 hover:text-slate-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-[color:var(--plum)]"
					>
						{l.label}
					</a>
				))}
			</nav>

			<div class="hidden lg:flex items-center gap-3">
				<a
					href="#programme"
					class="inline-flex items-center justify-center rounded-2xl bg-[color:var(--plum)] px-4 py-2 text-base font-semibold text-white shadow-sm shadow-black/5 transition hover:brightness-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-[color:var(--plum)]"
				>
					Découvrir
				</a>
			</div>

			<!-- Mobile -->
			<details class="group relative lg:hidden">
				<summary
					class="list-none inline-flex items-center justify-center rounded-2xl bg-white/60 px-3 py-2 text-base font-semibold text-slate-900 ring-1 ring-black/5 shadow-sm transition hover:bg-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-4 focus-visible:outline-[color:var(--plum)]"
					aria-label="Ouvrir le menu"
				>
					Menu
				</summary>

				<div
					class="absolute right-0 mt-2 w-[min(92vw,22rem)] overflow-hidden rounded-2xl bg-white shadow-lg ring-1 ring-black/10"
				>
					<nav class="p-2" aria-label="Menu mobile">
						{links.map((l) => (
							<a
								href={l.href}
								class="block rounded-xl px-3 py-2 text-base font-medium text-slate-800 hover:bg-[color:var(--sage)]/60 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[color:var(--plum)]"
							>
								{l.label}
							</a>
						))}
						<div class="mt-2 border-t border-black/5 pt-2">
							<a
								href="#programme"
								class="block rounded-xl bg-[color:var(--plum)] px-3 py-2 text-center text-base font-semibold text-white shadow-sm shadow-black/5 hover:brightness-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-[color:var(--plum)]"
							>
								Découvrir
							</a>
						</div>
					</nav>
				</div>
			</details>
		</div>
	</div>
</header>
