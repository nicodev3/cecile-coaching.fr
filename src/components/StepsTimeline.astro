---
import IconReconnexion from './icons/IconReconnexion.astro';
import IconStabilite from './icons/IconStabilite.astro';
import IconRenforcement from './icons/IconRenforcement.astro';
import IconAutonomie from './icons/IconAutonomie.astro';

const steps = [
	{
		title: 'Reconnexion & sécurité',
		desc: 'Remettre le corps en mouvement en douceur, installer des pratiques sécuritaires',
		icon: IconReconnexion,
	},
	{
		title: 'Force & progressivité',
		desc: 'Construire force, stabilité, équilibre et endurance de manière progressive en respectant la fatigue chronique',
		icon: IconRenforcement,
	},
	{
		title: 'Vitalité & énergie',
		desc: "C'est le moment d'augmenter en intensité tout en restant à l'écoute de son corps",
		icon: IconStabilite,
	},
	{
		title: 'Confiance & autonomie',
		desc: 'Stabiliser les progrès, installer une routine durable, redonner confiance dans ses capacités physiques.',
		icon: IconAutonomie,
	},
];

const reveal =
	'opacity-0 translate-y-4 transition duration-700 ease-out will-change-transform will-change-opacity motion-reduce:transition-none data-[revealed=true]:opacity-100 data-[revealed=true]:translate-y-0';
---

<section class={`py-14 sm:py-18 ${reveal}`} data-reveal data-revealed="false" aria-labelledby="steps-title">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="mx-auto max-w-3xl text-center">
			<h2 id="steps-title" class="text-2xl font-semibold text-slate-900 sm:text-3xl">
				Les 4 étapes de transformation
			</h2>
			<p class="mt-4 text-base leading-relaxed text-slate-800">
				Une progression claire, douce, et rassurante — pour avancer sans pression.
			</p>
		</div>

		<ol class="mx-auto mt-10 max-w-4xl space-y-6">
			{steps.map((s, idx) => (
				<li>
					<div class="relative rounded-[2rem] bg-white/60 p-6 ring-1 ring-black/5">
						<div class="flex items-start gap-4">
							<div
								class="grid h-12 w-12 shrink-0 place-items-center rounded-2xl bg-[color:var(--sage)]/70 ring-1 ring-black/5"
								aria-hidden="true"
							>
								<s.icon class="text-[color:var(--plum)]" />
							</div>
							<div class="flex-1">
								<div class="mb-1 flex items-center gap-2">
									<span class="text-sm font-semibold tracking-[0.22em] text-slate-700/80">
										ÉTAPE {idx + 1}
									</span>
								</div>
								<p class="text-base font-semibold text-slate-900">{s.title}</p>
								<p class="mt-2 text-base leading-relaxed text-slate-700">{s.desc}</p>
							</div>
						</div>
					</div>
				</li>
			))}
		</ol>
	</div>
</section>
